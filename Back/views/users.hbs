{{> header }}

<div class="" style="height: 75vh; width: 100vw;">
  <div class="m-5">
    <div class="text-right">
      <a href="/users/form" class="btn btn-primary">Crear Usuario</a>
    </div>
    <table class="table table-bordered my-3">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Firstname</th>
          <th scope="col">Lastname</th>
          <th scope="col">Email</th>
          <th scope="col">isAdmin</th>
          <th scope="col">canRead</th>
          <th scope="col">canWrite</th>
          <th scope="col">canDelete</th>
          <th scope="col">createdAt</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.firstname}}</td>
          <td>{{this.lastname}}</td>
          <td>{{this.email}}</td>

          {{#if this.isAdmin}}
          <td>Si</td>
          {{else}}
          <td>No</td>
          {{/if}}

          {{#if this.canRead}}
          <td>Si</td>
          {{else}}
          <td>No</td>
          {{/if}}

          {{#if this.canWrite}}
          <td>Si</td>
          {{else}}
          <td>No</td>
          {{/if}}

          {{#if this.canDelete}}
          <td>Si</td>
          {{else}}
          <td>No</td>
          {{/if}}

          <td>{{this.createdAt}}</td>
          <td style="display: flex;">
            
            <a href="/users/{{this.id}}/form" class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i></a>
            
            <form action="/users/delete/{{this.id}}" method="post">
              <button type="submit" class="btn btn-danger mx-1"><i class="bi bi-trash"></i></button>
            </form>

          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>


{{> footer }}