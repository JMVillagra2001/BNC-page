{{> header }}

<div class="container" style="height: 75vh;">
    <div class="row h-100 justify-content-center align-items-center">
        <form action="/house/create" method="post" class="col-9 card p-4">

            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" placeholder="Name" value="{{house.name}}">
            </div>

            <div class="form-group">
                <label>Ubication</label>
                <input type="text" class="form-control" name="ubication" placeholder="Ubication"
                    value="{{house.ubication}}">
            </div>

            <div class="form-group">
                <label>Neighborhood</label>
                <input type="text" class="form-control" name="neighborhood" placeholder="Neighborhood"
                    value="{{house.neighborhood}}">
            </div>

            <div class="form-group">
                <label>Mts</label>
                <input type="text" class="form-control" name="mts" placeholder="Mts" value="{{house.mts}}">
            </div>


            <div class="form-group">
                <label>Rooms</label>
                <input type="text" class="form-control" name="rooms" placeholder="Rooms" value="{{house.rooms}}">
            </div>

            <div class="form-group">
                <label>Baths</label>
                <input type="text" class="form-control" name="baths" placeholder="Baths" value="{{house.baths}}">
            </div>



            <input type="hidden" name="developmentId" value="{{house.developmentId}}">
            {{#if house.id}}
            <input type="hidden" name="id" value="{{house.id}}">
            <button type="submit" class="btn btn-primary" style="width: 100%;">Editar</button>
            {{else}}
            <button type="submit" class="btn btn-primary" style="width: 100%;">Crear</button>
            {{/if}}

        </form>
    </div>
</div>

{{> footer }}