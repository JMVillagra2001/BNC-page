{{> header }}

<div class="container" style="height: 75vh;">
    <div class="row h-100 justify-content-center align-items-center">
        <form action="/developments/create" method="post" class="col-9 card p-4">

            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" placeholder="Name"
                    value="{{development.name}}">
            </div>

            <div class="form-group">
                <label>Ubication</label>
                <input type="text" class="form-control" name="ubication" placeholder="Ubication"
                    value="{{development.ubication}}">
            </div>

            <div class="form-group">
                <label>State</label>
                <input type="text" class="form-control" name="state" placeholder="State"
                    value="{{development.state}}">
            </div>





            {{#if development}}
            <input type="hidden" name="id" value="{{development.id}}">
            <button type="submit" class="btn btn-primary" style="width: 100%;">Editar</button>
            {{else}}
            <button type="submit" class="btn btn-primary" style="width: 100%;">Crear</button>
            {{/if}}

        </form>
    </div>
</div>

{{> footer }}